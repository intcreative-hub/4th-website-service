# Website 3rd Tier - Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# DATABASE
# ======================
DATABASE_URL="postgresql://postgres:password@localhost:5432/website_3rd_tier?schema=public"

# ======================
# STRIPE PAYMENT
# ======================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ======================
# EMAIL SERVICE (Resend)
# ======================
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"

# ======================
# ADMIN ACCESS
# ======================
ADMIN_PASSWORD="your-secure-admin-password"

# ======================
# JWT AUTHENTICATION (4th Tier)
# ======================
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
BCRYPT_ROUNDS="12"

# ======================
# CONTACT INFORMATION
# ======================
NEXT_PUBLIC_PHONE="(555) 123-4567"
NEXT_PUBLIC_ADDRESS="123 Main St, Your City, ST 12345"
NEXT_PUBLIC_EMAIL="info@yourbusiness.com"

# ======================
# BUSINESS HOURS
# ======================
NEXT_PUBLIC_HOURS_WEEKDAY="9:00 AM - 6:00 PM"
NEXT_PUBLIC_HOURS_WEEKEND="10:00 AM - 4:00 PM"

# ======================
# GOOGLE MAPS (optional)
# ======================
NEXT_PUBLIC_MAPS_EMBED_URL="https://www.google.com/maps/embed?pb=..."

# ======================
# SOCIAL MEDIA LINKS
# ======================
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/yourbusiness"
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/yourbusiness"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/yourbusiness"
NEXT_PUBLIC_LINKEDIN_URL="https://linkedin.com/company/yourbusiness"

# ======================
# FEATURE TOGGLES
# ======================
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_SHOP=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true

# ======================
# SITE CONFIGURATION
# ======================
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
NEXT_PUBLIC_SITE_NAME="Your Business Name"
